{
  "info": {
    "name": "Ramtex Mobile API",
    "description": "Customer mobile app API for authentication, product catalog, and checkout",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"full_name\": \"Jane Smith\",\n  \"email\": \"jane@example.com\",\n  \"phone\": \"+961-71-987-654\",\n  \"password\": \"password123\",\n  \"password_confirmation\": \"password123\",\n  \"company_name\": \"Test Corp\",\n  \"city\": \"Beirut\",\n  \"country\": \"Lebanon\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/client/register",
              "host": ["{{base_url}}"],
              "path": ["api", "client", "register"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "  var jsonData = pm.response.json();",
                  "  pm.environment.set('client_token', jsonData.token);",
                  "  pm.test('Registration successful', () => {",
                  "    pm.expect(pm.response.code).to.equal(201);",
                  "    pm.expect(jsonData.token).to.exist;",
                  "    pm.expect(jsonData.client).to.exist;",
                  "  });",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/client/login",
              "host": ["{{base_url}}"],
              "path": ["api", "client", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  var jsonData = pm.response.json();",
                  "  pm.environment.set('client_token', jsonData.token);",
                  "  pm.test('Login successful', () => {",
                  "    pm.expect(pm.response.code).to.equal(200);",
                  "    pm.expect(jsonData.token).to.exist;",
                  "    pm.expect(jsonData.client).to.exist;",
                  "  });",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{client_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/client/logout",
              "host": ["{{base_url}}"],
              "path": ["api", "client", "logout"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
